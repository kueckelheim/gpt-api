<h2>Chat</h2>
<div id="chat-container">
  <div id="chat-messages">
    {{#each messages}}
      <div class="message {{this.sender}}">
        <p>{{{markdown this.text}}}</p>
      </div>
    {{/each}}
  </div>
  <form id="chat-form" action="/postMessage" method="POST">
    <input
      type="text"
      id="chat-input"
      name="message"
      placeholder="Type your message here..."
    />
    <input type="hidden" name="history" value="{{json messages}}" />
    <button type="submit">Send</button>
  </form>
</div>

<h2>Product List</h2>
<ul>
  {{#each products}}
    <li>{{this.name}} - ${{this.price}}: {{this.description}}</li>
  {{/each}}
</ul>